<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Avenger Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src ="<%= campg.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= campg.name %></a></h1>
                    <p><%= campg.description%></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campg._id%>/comments/new">Add a new Comment</a>
                </div>
                <hr>
                <% campg.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
                        </div>    
                    </div>
                  
                <% }); %>
                
            </div>
        </div>
    </div>
</div>


<a class="pull-center" href="/campgrounds">Back</a>



<% include ../partials/footer %>