<% include ../partials/header %>


<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome To The Avengers' Camp</h1>
    <p>Prepare For The Snap</p>
    <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New CampGrounds</a> </p>
    </div>
</header>

<div class="row">
    <div class ="col-lg-12">
        <h3>Our Training Grounds</h3>
    </div>
</div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% campg.forEach(function(campg){ %>
        <div class="cil-med-3 col-sm-6">
            
                <div class="thumbnail">
                     <img src="<%=campg.image %>">
                     <div class="caption">
                         <h4> <%= campg.name%></h4>
                     </div>
                     <p>
                         <a href="/campgrounds/<%= campg._id%>" class="btn btn-primary">More Info</a>
                     </p>
                </div>
        </div>
           
     
 <% }); %>
    
    
</div>

 </div>
 
