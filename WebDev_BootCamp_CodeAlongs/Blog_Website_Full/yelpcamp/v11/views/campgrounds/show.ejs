<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Avenger Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src ="<%= campg.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= campg.name %></a></h1>
                    <p><%= campg.description%></p>
					<p>
						<em>Submitted by <%= campg.author.username%></em>					</p>
				<% if(currentUser && campg.author.id.equals(currentUser._id)){ %>
					<a class ="btn btn-xs btn-warning" href="/campgrounds/<%= campg._id%>/edit">Edit</a>
					 <form class="delete-form" action="/campgrounds/<%= campg._id%>?_method=DELETE" method="POST">
						 <button class="btn btn-xs btn-danger">Delete
							 
						 </button>
					</form>
					<% }  %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=campg._id%>/comments/new">Add a new Comment</a>
                </div>
                <hr>
                <% campg.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p><%= comment.text %></p>
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
							<a class ="btn btn-xs btn-warning" 		href="/campgrounds/<%= campg._id%>/comments/<%= comment._id %>/edit">Edit</a>
							 <form class="delete-form" action="/campgrounds/<%= campg._id%>/comments/<%= comment._id %>?_method=DELETE" method="POST">
						 <button class="btn btn-xs btn-danger">Delete
							 
						 </button>
					</form>
					<% }  %>
                        </div>    
                    </div>
                  
                <% }); %>
                
            </div>
        </div>
    </div>
</div>


<a class="pull-center" href="/campgrounds">Back</a>



<% include ../partials/footer %>